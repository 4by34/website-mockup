		<script type="text/javascript">

			$("#submitInfo").on( "click", function() {

				var formValues = {"timestamp": new Date(), "ipAddress": "{{client_ip}}", "referrer": "{{referer}}"};

				$(".form-control").each(function(index,element) {
					formValues[element.id] = element.value;
				});

				function successFunction(data, codeString) {console.log("success handler: " + codeString);}
				function errorFunction(data, errorState, errorReason) {console.log("error " + errorReason);}
				
				$.ajax({
					method: 'put',
					url: "/sheet/MNSTest/row",
					data: JSON.stringify(formValues),
					processData: false,
					contentType: "application/json",
					success: successFunction,
					error: errorFunction
				});
			
				$("form").css( "display", "none" );
				$("#thankyoumsg").css( "display", "block" );

			});

		</script>

	</body>
